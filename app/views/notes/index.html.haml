%h1 Listing notes
%table
  %tr
    %th Title
    %th Content
    %th User
    %th{:colspan => "3"}
  - @notes.each do |note|
    %tr
      %td= note.title
      %td= note.content
      %td= current_user.email
      %td= link_to 'Show', note_path(note)
      %td= link_to 'Edit', edit_note_path(note)
      %td= link_to 'Destroy', note_path(note), method: :delete, data: {confirm: 'Are you sure?'}
%br
= link_to 'New note', new_note_path
